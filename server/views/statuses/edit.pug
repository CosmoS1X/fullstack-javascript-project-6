extends ../layouts/application.pug

block header 
  = t('layouts.headers.editStatus')

block content 
  +formFor()(action=`/statuses/${status.id}` method='post') 
    +input(status, 'name', errors)(type='text')
    input(name='_method' type='hidden' value='patch')
    input.btn.btn-primary(type='submit' value= t('layouts.buttons.change'))
