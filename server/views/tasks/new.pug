extends ../layouts/application.pug

block header
  = t('layouts.headers.createTask')

block content 
  +formFor()(action= route('tasks') method='post')
    +input(task, 'name', errors)(type='text')
    +textarea(task, 'description', errors)= task.description
    +select(task, 'statusId', statuses, errors)
    +select(task, 'executorId', users, errors)
    +multiSelect(task, 'labels', labels)
    +submit(task)(value= t('layouts.buttons.create'))
